QComboBox {
    border: 1px solid #BDBDBD;
    border-radius: 5px;
    padding: 2px 4px 2px 4px;
    min-width: 6em;
    font-size: 13px;
}

QComboBox QAbstractItemView {
    border: 1px solid #BDBDBD;
    border-radius: 5px;
    background-color: white;
    selection-background-color: #5D9CEC;
}

QComboBox:hover {
    border-color: #5D9CEC;
}

QComboBox:on {
    border: 1px solid #4A89DC;
    border-radius: 5px;
}

QComboBox:on {
    border: 1px solid #4A89DC;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 35px;
    border-left-width: 0px;
    border-radius: 4px;
    border-radius: 4px;
}

QComboBox::drop-down:!on {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #5D9CEC, stop: 1 #4A89DC);
    border: 1px solid #3A79CB;
    border-bottom: 3px solid #3A79CB;
    border-radius: 5px;
    margin: 2px;
}

QComboBox::drop-down:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #6AACFF, stop: 1 #5D9CEC);
}

QComboBox::drop-down:on {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #4A89DC, stop: 1 #3A79CB);
    border: 1px solid #3A79CB;
    border-bottom: 1px solid #3A79CB;
    margin: 2px;
    margin-top: 4px;
}

QComboBox::down-arrow {
    image: url(icons/dropdown_arrow.svg);
    width: 14px;
    height: 14px;
}

QDoubleSpinBox {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 5px;
    padding: 2px 4px 2px 4px;
    font-size: 13px;
    color: #333;
    padding-left: 8px;
    height: 30px;
}

QDoubleSpinBox:hover {
    border-color: #5D9CEC;
}

QDoubleSpinBox:focus {
    border-color: #4A89DC;
}

QDoubleSpinBox::up-button, QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    width: 35px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #5D9CEC, stop: 1 #4A89DC);
    border: 1px solid #3A79CB;
    border-bottom: 3px solid #3A79CB;
    border-radius: 5px;
    margin: 1px;
}

QDoubleSpinBox::up-button {
    subcontrol-position: top right;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

QDoubleSpinBox::down-button {
    subcontrol-position: bottom right;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
}

QDoubleSpinBox::up-button:hover, QDoubleSpinBox::down-button:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #6AACFF, stop: 1 #5D9CEC);
}

QDoubleSpinBox::up-button:pressed, QDoubleSpinBox::down-button:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #4A89DC, stop: 1 #3A79CB);
    padding-top: 2px;
}

QDoubleSpinBox::down-arrow {
    image: url(icons/dropdown_arrow.svg);
    width: 14px;
    height: 25px;
}
QDoubleSpinBox::up-arrow {
    image: url(icons/dropdown_uparrow.svg);
    width: 14px;
    height: 25px;
}

QCheckBox {
    spacing: 10px;
    color: #333;
    font-size: 13px;
    padding-bottom: 3px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 5px;
}

QCheckBox::indicator:unchecked {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 #F5F5F5, stop: 1 #E0E0E0);
    border: 1px solid #BDBDBD;
    border-bottom: 2px solid #B0B0B0;
}

QCheckBox::indicator:unchecked:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 #FFFFFF, stop: 1 #E8E8E8);
    border-color: #9E9E9E;
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 #4A89DC, stop: 1 #3A79CB);
    border: 1px solid #3A79CB;
    margin-top: 2px;
}

QCheckBox::indicator:checked:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #5D9CEC, stop: 1 #4A89DC); /* Gradiente pi√π chiaro al hover */
}

QCheckBox::indicator:disabled {
    background: #E0E0E0;
    border: 1px solid #C0C0C0;
    border-bottom: 2px solid #BDBDBD;
}

QCheckBox::check-mark:disabled {
    image: none;
}

